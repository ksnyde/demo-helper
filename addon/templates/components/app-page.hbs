{{#demo-css}}
  <div class="container">
    <div class="page-header">
      <span class="title-block">
        {{add-page-header repo=repo npm=npm repoOwner=repoOwner subHeading=subHeading}}
      </span>
      <span class="navigation">
        {{#if notIndexPage}}
            {{#link-to 'index'}}
            <div class="back-navigation">
                {{ui-icon icon='arrow-circle-left' size='5x' class='animated fadeIn'}}
            </div>
            {{/link-to}}
        {{/if}}
      </span>
  </div>
  <div class="page-content">
    {{#if hasBlock}}
      {{yield}}
    {{else}}
      {{outlet}}
    {{/if}}
  </div>
</div>
{{/demo-css}}